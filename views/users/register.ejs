<% layout("layouts/boilerplate")%>
    <h1 class="col-lg-6 offset-lg-3 h4 mt-3 m">Register</h1>
    <form action="/register" method="POST" class="col-lg-6 offset-lg-3 needs-validation" novalidate>
        <div class="mb-3">
            <label class="form-label" for="username">Enter username</label>
            <input type="text" class="form-control" name="user[username]" id="username" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Enter email</label>
            <input class="form-control" type="email" name="user[email]" id="email" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="password">Enter password</label>
            <input class="form-control" type="password" name="user[password]" id="password" required>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>