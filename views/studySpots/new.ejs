<% layout('layouts/boilerplate.ejs') %>

    <h1 class="col-lg-6 offset-lg-3 h4 mt-3 m">Add new study spot</h1>
    <form action="/studySpots" method="POST" class="col-lg-6 offset-lg-3 needs-validation" novalidate>
        <div class="mb-3">
            <label class="form-label" for="description">Enter study spot description</label>
            <input type="text" class="form-control" name="studySpot[description]" id="description" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="library">Enter the library</label>
            <input class="form-control" type="text" name="studySpot[library]" id="library" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="image">Upload an image</label>
            <input class="form-control" type="text" name="studySpot[image]" id="image" required>
        </div>

        <button type="submit" class="btn btn-primary">submit</button>
    </form>
    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>