<% layout('layouts/boilerplate.ejs') %>


    <h1 class="col-lg-6 offset-lg-3 h4">Edit this study spot</h1>
    <form action="/studySpots/<%= studySpot._id %>?_method=PUT" method="POST"
        class="col-lg-6 offset-lg-3 needs-validation" novalidate>
        <div class="mb-3">
            <label class="form-label" for="description">Enter study spot description</label>
            <input type=text class="form-control" name="studySpot[description]" id="description"
                value="<%= studySpot.description %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="library">Enter the library</label>
            <select class="form-select" name="studySpot[library]" id="librari" required>

                <% for( let library of libraries) { %>
                    <% if (library.name===studySpot.library.name){ %>
                        <option value="<%=  library.name %>" selected>
                            <%= library.name %>
                        </option>
                        <% } else {%>
                            <option value="<%=  library.name %>">
                                <%= library.name %>
                            </option>
                            <% } %>

                                <% } %>
            </select>
        </div>
        <!-- <div class="mb-3">
            <label class="form-label" for="image">Upload an image</label>
            <input class="form-control" type="file" name="image" id="image" required>
        </div> -->
        <div class="mb-3">
            <input class="form-control" type="text" name="studySpot[username]" id="username"
                value="<%= currentUser.username %>" hidden>
        </div>

        <button type="submit" class="btn btn-primary">submit</button>
        <a href="/studySpots/<%= studySpot._id %>" class="btn btn-warning">cancel changes</a>
    </form>