<% layout('layouts/boilerplate.ejs') %>


    <h1 class="col-lg-6 offset-lg-3 h4">Edit this study spot</h1>
    <form action="/studySpots/<%= studySpot._id %>?_method=PUT" method="POST"
        class="col-lg-6 offset-lg-3 needs-validation" novalidate>
        <div class="mb-3">
            <label class="form-label" for="description">Enter study spot description</label>
            <input type=text class="form-control" name="studySpot[description]" id="description"
                value="<%= studySpot.description %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="library">Enter the library</label>
            <input class="form-control" type="text" name="studySpot[library]" id="library"
                value="<%= studySpot.library.name %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="image">Upload an image</label>
            <input class="form-control" type="text" name="studySpot[image]" id="image" value="<%= studySpot.image %>"
                required>
        </div>

        <button type="submit" class="btn btn-primary">submit</button>
    </form>